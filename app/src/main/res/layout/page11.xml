<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/backarrow">

        </ImageView>

        <TextView
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item"
            android:textColor="@color/black"
            android:textSize="25dp">

        </TextView>>

        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Report"
            android:textColor="#FFA500"
            android:layout_alignParentEnd="true">

        </TextView>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#d4d4d4">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/circle"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="170dp"
            android:layout_marginBottom="20dp">

        </ImageView>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/blackcircle"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="190dp"
            android:layout_marginBottom="20dp">

        </ImageView>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/blackcircle"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="210dp"
            android:layout_marginBottom="20dp">

        </ImageView>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/blackcircle"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="230dp"
            android:layout_marginBottom="20dp">

        </ImageView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$12"
        android:textSize="20dp"
        android:textColor="#FFA500">

    </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/hr"
            android:textSize="20dp">

        </TextView>


    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Name of the item comes here">

    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/loc"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/location">

        </ImageView>
        <TextView
            android:layout_toRightOf="@+id/loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Islamabad"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11th march 2023"
            android:textSize="18dp">

        </TextView>

    </RelativeLayout>


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="hello my name is ahmad. this is some demo text to fill
up some gaps thankyou lorum ehasjdhj ejhrejhf a ajsdhsaj  jashd jashd  jhas d
ajshdjas hd jahsdjas hdjj jashd "
        android:textSize="20dp">


    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        >

        <ImageView
            android:id="@+id/pfpicon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ahmad Aamir"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/pfpicon"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24 items rented"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/pfpicon"

            android:layout_marginTop="5dp"

            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/pfpicon">

        </TextView>


        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/text"
            android:layout_alignParentRight="true">

        </ImageView>

    </RelativeLayout>


    <Button
        android:id="@+id/rentbutton"
      android:layout_marginTop="5dp"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:text="Rent it"
        android:textSize="20dp"
        android:background="@drawable/circle">
    </Button>

</LinearLayout>